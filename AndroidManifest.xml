<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eleonorvinicius.ace"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <!-- configuration -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.eleonorvinicius.ace.configuration.activity.ListConfigurationActivity"
            android:label="@string/list_configuration" >
        </activity>
        <activity
            android:name="com.eleonorvinicius.ace.configuration.activity.EditConfigurationActivity"
            android:label="@string/edit_configuration"
            android:parentActivityName="com.eleonorvinicius.ace.configuration.activity.ListConfigurationActivity" >

            <!--
            intent-filter>
                <action android:name="EditConfigurationActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter
            -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eleonorvinicius.ace.configuration.activity.ListConfigurationActivity" />
        </activity>
        <activity
            android:name="com.eleonorvinicius.ace.configuration.activity.CreateConfigurationActivity"
            android:label="@string/create_configuration"
            android:parentActivityName="com.eleonorvinicius.ace.configuration.activity.ListConfigurationActivity" >

            <!--
            intent-filter>
                <action android:name="CreateConfigurationActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter
            -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eleonorvinicius.ace.configuration.activity.ListConfigurationActivity" />
        </activity>

        <!-- user -->
        <activity
            android:name="com.eleonorvinicius.ace.user.activity.ListUserActivity"
            android:label="@string/list_user" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eleonorvinicius.ace.user.activity.EditUserActivity"
            android:label="@string/edit_user"
            android:parentActivityName="com.eleonorvinicius.ace.user.activity.ListUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eleonorvinicius.ace.user.activity.ListUserActivity" />
        </activity>
    </application>

</manifest>